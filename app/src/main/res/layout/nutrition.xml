<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />



    <TextView
        android:id="@+id/nutritionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Repères nutritionnels pour 100g"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--Matières grasses-->
    <View
        android:id="@+id/point1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/nutritionTitle"
        android:background="@drawable/point"/>
    <TextView
        android:id="@+id/butterfat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="matières grasses / Lipides en faible quantité"
        app:layout_constraintStart_toEndOf="@id/point1"
        app:layout_constraintTop_toBottomOf="@id/nutritionTitle"/>


    <View
        android:id="@+id/point2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/point1"
        android:background="@drawable/point"/>
    <TextView
        android:id="@+id/saturated_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Acide gras saturé en faible quantité"
        app:layout_constraintStart_toEndOf="@id/point2"
        app:layout_constraintTop_toBottomOf="@id/butterfat"/>


    <View
        android:id="@+id/point3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/point2"
        android:background="@drawable/point"/>
    <TextView
        android:id="@+id/sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Sucre en quantité modéré"
        app:layout_constraintStart_toEndOf="@id/point3"
        app:layout_constraintTop_toBottomOf="@id/saturated_fat"/>


    <View
        android:id="@+id/point4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/point3"
        android:background="@drawable/point"/>
    <TextView
        android:id="@+id/salte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Sel en quantité modéré"
        app:layout_constraintStart_toEndOf="@id/point4"
        app:layout_constraintTop_toBottomOf="@id/sugar"/>




</androidx.constraintlayout.widget.ConstraintLayout>


